<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

       <!--first row-->
        <Button x:Name="number0"
                Content="0"
                Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                Click="NumberClick"/>

        <Button x:Name="point"
                Content="."
                Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="1"/>

        <Button x:Name="equals"
                Content="="
                Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="1"/>

       <!--second row-->
        <Button x:Name="number1"
                Content="1"
                Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="1"
                Click="NumberClick"/>
        
        <Button x:Name="number2"
                Content="2"
                Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="1"
                Click="NumberClick"/>

        <Button x:Name="number3"
                Content="3"
                Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="1"
                Click="NumberClick"/>

        <Button x:Name="plus"
                Content="+"
                Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="1" Click="OperatorClick"/>
        
        <!--third row-->

        <Button x:Name="number4"
                Content="4"
                Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="1"
                Click="NumberClick"/>
        <Button x:Name="number5"
                Content="5"
         Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="1" Click="NumberClick"/>
        <Button x:Name="number6"
         Content="6"
         Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="1" Click="NumberClick"/>

        <Button x:Name="minus"
         Content="-"
               
         Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="1" Click="OperatorClick"/>
        
        <!--fourth row-->

        <Button x:Name="number7"
         Content="7"
         Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1" Click="NumberClick"/>

        <Button x:Name="number8"
         Content="8"
         Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" Click="NumberClick"/>

        <Button x:Name="number9"
         Content="9"
         Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1" Click="NumberClick"/>

        <Button x:Name="multiply"
         Content="*"
         Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="1" Click="OperatorClick"/>
        
        <!--fifth row-->

        <Button x:Name="AC"
         Content="AC"
         Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" />

        <Button x:Name="sign"
         Content="+ / -"
         Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1"/>

        <Button x:Name="percent"
         Content="%"
         Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="1"/>


        <Button x:Name="divide"
         Content="/"
         Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="1" Click="OperatorClick"/>
        
        <!--result-->

        <Label x:Name="resultlbl"
         Content="0"
         Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="2"
         HorizontalAlignment="Right" VerticalAlignment="Bottom"      />

    </Grid>
</Window>
