<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator - Youcef" Height="800" Width="700">
    

    <Window.Resources>
        <FontFamily x:Key="appleBold">/Calculator;component/Font/#SF Pro Display Bold</FontFamily>
        <FontFamily x:Key="appleRegular">/Calculator;component/Font/#SF Pro Display Regular</FontFamily>
        <FontFamily x:Key="appleSemiItalic">/Calculator;component/Font/#SF Pro Display Semibold Italic</FontFamily>

        <Style x:Key="NumberButton" TargetType="Button">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily"  Value= "{StaticResource appleRegular}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="30"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter 
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                              />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OperatorButton" TargetType="Button">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Background" Value="#f0b954"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="{StaticResource appleBold}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="30"
                     BorderBrush="{TemplateBinding BorderBrush}"
                     Background="{TemplateBinding Background}"
                     BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter 
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                                   />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OtherButton" TargetType="Button">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="{StaticResource appleSemiItalic}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="30"
                     BorderBrush="{TemplateBinding BorderBrush}"
                     Background="{TemplateBinding Background}"
                     BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter 
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                                   />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LogoImageFadeIn" TargetType="Image">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <BlurEffect Radius="20"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Image.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1"
                                     Duration="0:0:0.5"
                                     BeginTime="0:0:2.00"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(BlurEffect.Radius)"
                                     From="10" To="0"
                                     Duration="0:0:0.5"
                                     BeginTime="0:0:2.00"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid">

        <Grid.Effect>
            <BlurEffect x:Name="GridBlur" Radius="20"/>
        </Grid.Effect>

        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>

                        <DoubleAnimation Storyboard.TargetName="MainGrid"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1"
                                         Duration="0:0:0.7">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseIn"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>

                        <DoubleAnimation Storyboard.TargetName="GridBlur"
                                         Storyboard.TargetProperty="Radius"
                                         From="20" To="0"
                                         Duration="0:0:0.7">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseIn"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>

                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!--logo-->
        <Image Source="/Logo/CalculatorLogo.png"
               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               HorizontalAlignment="Left"
               Style="{StaticResource LogoImageFadeIn}"/>


        <!-- result -->
        <Label x:Name="resultlbl" Content="0"
               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="2"
               HorizontalAlignment="Right" VerticalAlignment="Bottom"
               FontSize="90" Padding="20" Opacity="0" FontFamily="{StaticResource appleBold}">
            <Label.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.5"
                                             BeginTime="0:0:0.15"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Label.Triggers>
        </Label>


        <!-- first row -->

        <Button x:Name="AC" Content="AC" Grid.Row="2" Grid.Column="0"
                Style="{StaticResource OtherButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.20"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button x:Name="sign" Content="+ / -" Grid.Row="2" Grid.Column="1"
                Style="{StaticResource OtherButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.25"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button x:Name="percent" Content="%" Grid.Row="2" Grid.Column="2"
                Style="{StaticResource OtherButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.30"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button Click = "OperatorClick" x:Name="divide" Content="/" Grid.Row="2" Grid.Column="3"
                Style="{StaticResource OperatorButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.35"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>


        <!-- second row -->

        <Button Click = "NumberClick" x:Name="number7" Content="7" Grid.Row="3" Grid.Column="0"
                Style="{StaticResource NumberButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.40"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button Click = "NumberClick" x:Name="number8" Content="8" Grid.Row="3" Grid.Column="1"
                Style="{StaticResource NumberButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.45"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button Click = "NumberClick" x:Name="number9" Content="9" Grid.Row="3" Grid.Column="2"
                Style="{StaticResource NumberButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.50"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button Click="OperatorClick" x:Name="multiply" Content="×" Grid.Row="3" Grid.Column="3"
                Style="{StaticResource OperatorButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.55"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>


        <!-- third row -->

        <Button Click = "NumberClick" x:Name="number4" Content="4" Grid.Row="4" Grid.Column="0"
                Style="{StaticResource NumberButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.60"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button Click = "NumberClick" x:Name="number5" Content="5" Grid.Row="4" Grid.Column="1"
                Style="{StaticResource NumberButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.65"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button Click="NumberClick" x:Name="number6" Content="6" Grid.Row="4" Grid.Column="2"
                Style="{StaticResource NumberButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.70"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button Click="OperatorClick" x:Name="minus" Content="-" Grid.Row="4" Grid.Column="3"
                Style="{StaticResource OperatorButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.75"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>


        <!-- fourth row -->

        <Button Click="NumberClick" x:Name="number1" Content="1" Grid.Row="5" Grid.Column="0"
                Style="{StaticResource NumberButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.80"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button Click="NumberClick" x:Name="number2" Content="2" Grid.Row="5" Grid.Column="1"
                Style="{StaticResource NumberButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.85"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button Click="NumberClick" x:Name="number3" Content="3" Grid.Row="5" Grid.Column="2"
                Style="{StaticResource NumberButton}" Opacity="0" >
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.90"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button Click="OperatorClick" x:Name="plus" Content="+" Grid.Row="5" Grid.Column="3"
                Style="{StaticResource OperatorButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:0.95"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>


        <!-- fifth row -->

        <Button Click="NumberClick" x:Name="number0" Content="0" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                Style="{StaticResource NumberButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:1.00"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button x:Name="point" Content="." Grid.Row="6" Grid.Column="2"
                Style="{StaticResource OtherButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:1.05"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

        <Button x:Name="equals" Content="=" Grid.Row="6" Grid.Column="3"
                Style="{StaticResource OtherButton}" Opacity="0">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.4"
                                             BeginTime="0:0:1.10"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>

    </Grid>
</Window>
